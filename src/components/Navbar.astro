---
import logo from '../images/logo.svg'
---

<header class="navbar">
    <div class="container">
        <img src={logo} width="50" alt="#logo" srcset="sorry mochco">
        <a href="#">Add post</a>
    </div>
</header>

<style lang="scss">
    .navbar {
        width: 100%;
        height: 100px;
        position: fixed;
        bottom: 0;
        background-color: white;
        border-top: 1px solid rgba(0,0,0,0.1);
        display: flex;
        justify-content: center;
        
        @media (max-width: 768px) {
            height: 80px;
            border: none;
        }
        .container {
            display: flex;
            align-items: center;
            width: 1200px;
            min-width: 980px;
            justify-content: space-between;
            @media (max-width: 768px) {
                width: calc(100% - 40px);
                min-width: 300px;
            }
            .logo {
                font-weight: 600;
                font-size: var(--bigSize);
            }
            a {
                background-color: black;
                color: white;
                padding: 10px 20px;
                font-size: var(--midSize);
                border-radius: 5px;

                &:hover {
                    scale: 1.01;
                }
            }
        }
    }
</style>