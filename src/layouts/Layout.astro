---
import '@fontsource/montserrat';
import '@fontsource/poppins/600.css';
import '@fontsource/poppins/500.css';
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/300.css';
import '@fontsource/poppins/200.css';
import logo from '../images/logo.svg'

export interface Props {
	title: string;
}

const { title } = Astro.props;

const montserrat:string = "Montserrat, serif"
const poppins:string = "Poppins, sans-serif;"
const bigSize:string = '1.6rem';
const midSize:string = '1rem';
const smallSize:string = '0.8rem';
const miniSize:string = '0.6rem';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href={logo} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global lang="css" define:vars={{
	poppins,
	montserrat,
	bigSize,
	midSize,
	smallSize,
	miniSize
	}}>
	
	* {
		padding: 0;
		margin: 0;
		scroll-behavior: smooth;

	}

	body {
		background-color: white;
		font-family: var(--poppins);
		font-weight: 400;
		font-size: var(--midSize);
	}
	a {
		text-decoration: none;
	}

	section {
		height: 100vh;
	}
</style>